@inherits UmbracoViewPage<TravelBlog.Models.ListPageModel>
@{
    Layout = "../Master.cshtml";
}
<a class="category-title" href="@Model.CategoryName"><h1>Category : @Model.CategoryName</h1></a>

<div class="col-md-8 blog-main">
    <div class="posts" role="main">
        @if (!Model.Children.Any())
        {
            @*<h3>KEEP SEARCHING</h3>
            @Html.Partial("SearchBox", Model)*@

            if (!Model.PageTitle.IsNullOrWhiteSpace())
            {
                <p>Sorry. No blog posts found</p>
            }
        }
        else
        {
            foreach (var post in Model.Posts)
            {

                @Html.Partial("ListPost", post)
            }

            @Html.Partial("Pager", Model.Pages)
        }
    </div>
</div>
<!--side bar-->
<aside class="col-md-4 blog-sidebar mt5">
    <div class="p-3 mb-3 bg-light rounded">
        <h4 class="font-italic">About</h4>
        <p class="mb-0">Wanna know where I go? Follow the journey, join in the fun. </p>
        <p class="mb-0">With info about activites and resturants and a bunch of mundane details that might make your trip easier. </p>
        <p class="mb-0">So you can go where Jo goes.</p>
    </div>
</aside>